<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:lottie_fileName="delete.json"
        app:lottie_autoPlay="true"
        android:elevation="3dp"
        android:layout_gravity="center"
        app:lottie_loop="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gray_back"
        android:gravity="center"
        android:layout_marginTop="-200dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/confirm_rounded"
        android:orientation="vertical"
        android:layout_marginTop="-25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deleting your account cannot be reversed.Your Uptown profile and history will be permanently removed."
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete your account?"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:layout_margin="20dp">
            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Cancel"
                android:textColor="@color/gray"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_weight="1"
                />
            <View
                android:layout_width="20dp"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="DELETE"
                android:backgroundTint="@color/danger"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>




</RelativeLayout>