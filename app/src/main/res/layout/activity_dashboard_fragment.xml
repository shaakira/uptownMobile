<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AdminFragments.DashboardFragment"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_round"
                android:layout_marginLeft="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello,"
                    android:focusable="true"
                    android:textSize="22sp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/top_round"
                android:backgroundTint="@color/black"
                android:layout_marginTop="50dp"
                android:paddingTop="20dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:background="@drawable/trasparent_back"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="5sp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:text="PROPERTIES"/>
                        <TextView
                            android:id="@+id/propCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:layout_marginTop="12dp"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="125dp"
                        android:layout_height="120dp"
                        android:background="@drawable/trasparent_back"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:text="AGENTS"/>
                        <TextView
                            android:id="@+id/agentCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:layout_marginTop="12dp"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:background="@drawable/trasparent_back"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        >
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_gravity="start"
                            android:text="ADVERTISER"/>
                        <TextView
                            android:id="@+id/adCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:layout_marginTop="12dp"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:background="@drawable/top_round"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="TOP AGENTS"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:background="@color/primary"
                    android:layout_marginLeft="20dp"/>

                <GridView
                    android:id="@+id/agentsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:numColumns="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/light_green"
                    android:orientation="vertical"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:text="USERS"
                                android:textSize="20sp"
                                android:gravity="center"/>
                            <com.anychart.AnyChartView
                                android:id="@+id/userChart"
                                android:layout_width="300dp"
                                android:layout_height="300dp"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>